<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launch_chart_tooltip_background"
        android:gravity="center_horizontal">

    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/launchChartToolTipTextView"
            tools:text="9.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_small_margin"
            app:layout_constraintEnd_toStartOf="@id/launchChartToolTipImageView"
            android:gravity="center"
            android:textColor="#ffffff"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textSize="16sp"/>


    <ImageView
            app:layout_constraintTop_toTopOf="@id/launchChartToolTipTextView"
            app:layout_constraintBottom_toBottomOf="@id/launchChartToolTipTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/launchChartToolTipTextView"
            android:id="@+id/launchChartToolTipImageView"
            android:tint="@android:color/white"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launch"
    />

</androidx.constraintlayout.widget.ConstraintLayout>