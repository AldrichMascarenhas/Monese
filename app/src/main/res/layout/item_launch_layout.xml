<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:layout_height="@dimen/item_launch_layout_card_height">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_margin="@dimen/x_large_margin"
                android:scaleType="centerInside"
                app:layout_constraintStart_toEndOf="@+id/itemLaunchLayoutViewBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/spacex_logo"
                android:id="@+id/itemLaunchLayoutImageViewMissionImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/colorAccent"
                android:id="@+id/itemLaunchLayoutViewBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@+id/itemLaunchLayoutGuideline50V"/>

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/item_launch_layout_margin_top"
                android:layout_marginStart="@dimen/item_launch_layout_margin_start"
                android:layout_marginEnd="@dimen/medium_margin"
                style="@style/h3.bold"
                android:textColor="@android:color/white"
                tools:text="Falcon 9"
                app:layout_constraintEnd_toStartOf="@id/itemLaunchLayoutGuideline50V"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemLaunchLayoutTextViewMissionName"/>

        <TextView
                android:layout_marginTop="@dimen/x_small_margin"
                style="@style/h3.light"
                android:layout_marginEnd="@dimen/medium_margin"
                android:textColor="@android:color/white"
                tools:text="27th June 2017"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/itemLaunchLayoutGuideline50V"
                app:layout_constraintStart_toStartOf="@id/itemLaunchLayoutTextViewMissionName"
                app:layout_constraintTop_toBottomOf="@id/itemLaunchLayoutTextViewMissionName"
                android:id="@+id/itemLaunchLayoutTextViewMissionDate"/>

        <TextView
                android:layout_marginTop="@dimen/x_small_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                style="@style/h4.light"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@id/itemLaunchLayoutTextViewMissionName"
                app:layout_constraintTop_toBottomOf="@id/itemLaunchLayoutTextViewMissionDate"
                tools:text="Successful Launch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemLaunchLayoutTextViewMissionSuccess"
                app:layout_constraintEnd_toStartOf="@+id/itemLaunchLayoutGuideline50V"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/itemLaunchLayoutGuideline50V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.50"
                android:orientation="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>